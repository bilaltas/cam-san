---
const currentPath = new URL(Astro.request.url).pathname.replaceAll('/', '');

// export interface Props {
// 	current: string;
// }

// const { current } = Astro.props;
---

<nav>
	<a href="/">Anasayfa</a>
	<a href="/urunler/" class={currentPath == "urunler" ? "active" : ""}>Ürünler</a>
	<a href="/hakkinda/" class={currentPath == "hakkinda" ? "active" : ""}>Hakkında</a>
	<a href="/iletisim/" class={currentPath == "iletisim" ? "active" : ""}>İletişim</a>
</nav>

<style lang="scss">
	nav {
		background-color: var(--primary);
		padding: 1.5em 2em;
		display: flex;
		gap: 2em;
		text-transform: uppercase;
		font-size: 0.9em;

		a {
			color: white;

			&.active {
				text-decoration: underline;
			}
		}
	}
</style>
